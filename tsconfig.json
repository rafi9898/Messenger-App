{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "module": "esnext",
    "sourceMap": false,
    "strictNullChecks": true,
    "types": [
      "@types/chrome",
      "@types/node",
      "@types/firefox-webext-browser"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "noImplicitAny": false
  },
  "include": [
    "src"
  ]
}
